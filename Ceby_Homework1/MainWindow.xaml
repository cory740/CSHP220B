<Window x:Class="Ceby_Homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceby_Homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <StackPanel>

        <TextBlock>Enter Name:</TextBlock>
        <TextBox x:Name="uxName" Background="#00000000" TextChanged="uxName_TextChanged"/>
        <TextBlock>Enter Password:</TextBlock>
        <TextBox x:Name="uxPassword" TextChanged="uxPassword_TextChanged"></TextBox>
        <Button x:Name="uxSubmit" Click="uxSubmit_Click">Submit</Button>

        <Button x:Name="uxThumbsUp">
            <StackPanel Orientation="Horizontal">
                <Image Source="images\ic_thumb_up_black_24dp_2x.png" Margin="0,0,20,0"/>
                <TextBlock VerticalAlignment="Center"  Text="Thumbs Up" />
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
